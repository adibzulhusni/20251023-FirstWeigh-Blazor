        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    thead {
        background-color: #f7fafc;
    }

    th {
        padding: 16px;
        text-align: left;
        font-size: 13px;
        font-weight: 600;
        color: #4a5568;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border-bottom: 2px solid #e2e8f0;
    }

    td {
        padding: 16px;
        border-bottom: 1px solid #e2e8f0;
        font-size: 14px;
    }

    tbody tr {
        transition: background-color 0.2s;
    }

        tbody tr:hover {
            background-color: #f7fafc;
        }

        tbody tr:last-child td {
            border-bottom: none;
        }

    .batch-code-text {
        font-family: 'Roboto Mono', monospace;
        font-weight: 600;
        color: #1a202c;
    }

    .status-badge-table {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 4px 12px;
        border-radius: 12px;
        font-size: 12px;
        font-weight: 600;
    }

    .status-pending {
        background-color: #feebc8;
        color: #7c2d12;
    }

    .status-inprogress {
        background-color: #bee3f8;
        color: #2c5282;
    }

    .status-completed {
        background-color: #c6f6d5;
        color: #22543d;
    }

    .status-aborted {
        background-color: #fed7d7;
        color: #742a2a;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #718096;
    }

    .empty-state-icon {
        font-size: 48px;
        margin-bottom: 16px;
        opacity: 0.3;
    }

    .empty-state-text {
        font-size: 16px;
        font-weight: 500;
        margin-bottom: 8px;
    }

    .empty-state-subtext {
        font-size: 14px;
        color: #a0aec0;
    }

    .loading-spinner {
        text-align: center;
        padding: 40px;
        color: #718096;
    }

    .refresh-indicator {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 13px;
        color: #718096;
        padding: 8px 16px;
        background: #f7fafc;
        border-radius: 6px;
        margin-left: 16px;
    }

    .refresh-dot {
        width: 8px;
        height: 8px;
        background: #48bb78;
        border-radius: 50%;
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%, 100% {
            opacity: 1;
        }

        50% {
            opacity: 0.3;
        }
    }

    .no-data-cell {
        color: #a0aec0;
        font-style: italic;
    }

    @@media (max-width: 1024px) {
        .page-container {
            padding: 20px;
        }

        .batch-card {
            min-width: 280px;
        }

        .date-filter-section {
            flex-direction: column;
        }
    }

    @@media (max-width: 768px) {
        .batch-card {
            min-width: 260px;
        }

        .table-card {
            overflow-x: auto;
        }

        table {
            min-width: 1000px;
        }
    }
</style>

<div class="page-container">
    <!-- Page Header -->
    <div class="page-header">
        <div style="display: flex; align-items: center;">
            <h1 class="page-title">Production Overview</h1>
            <span class="refresh-indicator">
                <span class="refresh-dot"></span>
                Auto-refresh every 5s
            </span>
        </div>
        <p class="page-subtitle">Real-time monitoring of active production batches</p>
    </div>

    @if (isLoading)
    {
        <div class="loading-spinner">Loading production data...</div>
    }
    else
    {
        <!-- Date Filter Section -->
        <div class="date-filter-section">
            <div class="filter-group">
                <label class="filter-label">Start Date (Planned) - From</label>
                <input type="date" class="filter-input" @bind="filterStartDate" />
            </div>
            <div class="filter-group">
                <label class="filter-label">End Date (Planned) - To</label>
                <input type="date" class="filter-input" @bind="filterEndDate" />
            </div>
            <div style="display: flex; gap: 8px;">
                <button class="btn-filter" @onclick="ApplyDateFilter">Apply Filter</button>
                <button class="btn-clear" @onclick="ClearDateFilter">Clear</button>
            </div>
        </div>

        <!-- Active Batches Section -->
        <div class="active-batches-section">
            <h2 class="section-title">Active Batches (@filteredActiveBatches.Count / 5)</h2>

            @if (!filteredActiveBatches.Any())
            {
                <div class="table-card">
                    <div class="empty-state">
                        <div class="empty-state-icon">🏭</div>
                        <div class="empty-state-text">No active batches</div>
                        <div class="empty-state-subtext">
                            @if (isDateFiltered)
                            {
                                <text>No batches found in the selected date range</text>
                            }
                            else
                            {
                                <text>Start a pending batch to begin production</text>
                            }
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="batch-cards-container">
                    @foreach (var batch in filteredActiveBatches)
                    {
                        <div class="batch-card @GetStatusClass(batch.Status)" @onclick="() => NavigateToBatch(batch.BatchId)">
                            <div class="batch-card-header">
                                <span class="batch-code">@batch.BatchId</span>
                                <span class="status-badge">@GetStatusDisplay(batch.Status)</span>
                            </div>

                            <div class="recipe-name">@batch.RecipeName</div>

                            <div class="batch-info">
                                <div class="info-row">
                                    <span class="info-label">Repetitions:</span>
                                    <span class="info-value">@batch.CurrentRepetition / @batch.TotalRepetitions</span>
                                </div>

                                @if (!string.IsNullOrEmpty(batch.StartedBy))
                                {
                                    <div class="info-row">
                                        <span class="info-label">Operator:</span>
                                        <span class="operator-name">@batch.StartedBy</span>
                                    </div>
                                }

                                @if (batch.PlannedStartTime.HasValue)
                                {
                                    <div class="info-row">
                                        <span class="info-label">Planned Start:</span>
                                        <span class="info-value" style="font-size: 11px;">@batch.PlannedStartTime.Value.ToString("MMM dd, HH:mm")</span>
                                    </div>
                                }

                                @if (batch.PlannedEndTime.HasValue)
                                {
                                    <div class="info-row">
                                        <span class="info-label">Planned End:</span>
                                        <span class="info-value" style="font-size: 11px;">@batch.PlannedEndTime.Value.ToString("MMM dd, HH:mm")</span>
                                    </div>
                                }
                            </div>

                            <div class="progress-section">
                                <div class="progress-text">Progress: @batch.ProgressPercentage.ToString("F0")%</div>
                                <div class="progress-bar">
                                    <div class="progress-fill" style="width: @batch.ProgressPercentage%"></div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>

        <!-- All Batches Section -->
        <div class="all-batches-section">
            <h2 class="section-title">All Batches (@allBatches.Count)</h2>

            <div class="table-card">
                <table>
                    <thead>
                        <tr>
                            <th>Batch Code</th>
                            <th>Recipe</th>
                            <th>Status</th>
                            <th>Progress</th>
                            <th>Completed By</th>
                            <th>Completed Date</th>
                            <th>Aborted By</th>
                            <th>Aborted Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!allBatches.Any())
                        {
                            <tr>
                                <td colspan="8">
                                    <div class="empty-state">
                                        <div class="empty-state-icon">📦</div>
                                        <div class="empty-state-text">No batches found</div>
                                        <div class="empty-state-subtext">Create your first batch to begin production</div>
                                    </div>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var batch in allBatches)
                            {
                                <tr style="cursor: pointer;" @onclick="() => NavigateToBatch(batch.BatchId)">
                                    <td><span class="batch-code-text">@batch.BatchId</span></td>
                                    <td>@batch.RecipeName</td>
                                    <td>
                                        <span class="status-badge-table status-@GetStatusClass(batch.Status)">
                                            @GetStatusDisplay(batch.Status)
                                        </span>
                                    </td>
                                    <td>
                                        <span style="font-family: 'Roboto Mono', monospace;">
                                            @batch.CurrentRepetition / @batch.TotalRepetitions (@batch.ProgressPercentage.ToString("F0")%)
                                        </span>
                                    </td>
                                    <td>
                                        @if (batch.Status == "Completed" && !string.IsNullOrEmpty(batch.CompletedBy))
                                        {
                                            <span>@batch.CompletedBy</span>
                                        }
                                        else
                                        {
                                            <span class="no-data-cell">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (batch.CompletedDate.HasValue)
                                        {
                                            <span>@batch.CompletedDate.Value.ToString("MMM dd, yyyy HH:mm")</span>
                                        }
                                        else
                                        {
                                            <span class="no-data-cell">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(batch.AbortedBy))
                                        {
                                            <span>@batch.AbortedBy</span>
                                        }
                                        else
                                        {
                                            <span class="no-data-cell">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (batch.AbortedDate.HasValue)
                                        {
                                            <span>@batch.AbortedDate.Value.ToString("MMM dd, yyyy HH:mm")</span>
                                        }
                                        else
                                        {
                                            <span class="no-data-cell">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@code {
    private List<Batch> activeBatches = new();
    private List<Batch> filteredActiveBatches = new();
    private List<Batch> allBatches = new();
    private bool isLoading = true;
    private System.Threading.Timer? refreshTimer;

    // Date filter properties
    private DateTime? filterStartDate;
    private DateTime? filterEndDate;
    private bool isDateFiltered = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
        StartAutoRefresh();
    }

    private async Task LoadData()
    {
        isLoading = true;

        // Load active batches (InProgress status)
        activeBatches = await BatchService.GetActiveBatchesAsync();

        // Apply date filter if active
        if (isDateFiltered)
        {
            ApplyDateFilter();
        }
        else
        {
            filteredActiveBatches = activeBatches.Take(5).ToList();
        }

        // Load all batches, sorted by created date descending
        allBatches = await BatchService.GetAllBatchesAsync();
        allBatches = allBatches.OrderByDescending(b => b.CreatedDate).ToList();

        isLoading = false;
    }

    private void ApplyDateFilter()
    {
        if (!filterStartDate.HasValue && !filterEndDate.HasValue)
        {
            // No filter applied
            filteredActiveBatches = activeBatches.Take(5).ToList();
            isDateFiltered = false;
            return;
        }

        isDateFiltered = true;
        var filtered = activeBatches.AsEnumerable();

        // Filter by planned start date range
        if (filterStartDate.HasValue)
        {
            filtered = filtered.Where(b =>
                b.PlannedStartTime.HasValue &&
                b.PlannedStartTime.Value.Date >= filterStartDate.Value.Date);
        }

        // Filter by planned end date range
        if (filterEndDate.HasValue)
        {
            filtered = filtered.Where(b =>
                b.PlannedEndTime.HasValue &&
                b.PlannedEndTime.Value.Date <= filterEndDate.Value.Date);
        }

        // Sort by priority:
        // 1. Same planned start date (closest to filter start date)
        // 2. Nearer planned end date (closer to today)
        var today = DateTime.Now.Date;
        var targetStartDate = filterStartDate?.Date ?? today;

        filteredActiveBatches = filtered
            .OrderBy(b =>
            {
                if (b.PlannedStartTime.HasValue)
                {
                    return Math.Abs((b.PlannedStartTime.Value.Date - targetStartDate).TotalDays);
                }
                return double.MaxValue;
            })
            .ThenBy(b =>
            {
                if (b.PlannedEndTime.HasValue)
                {
                    return Math.Abs((b.PlannedEndTime.Value.Date - today).TotalDays);
                }
                return double.MaxValue;
            })
            .Take(5) // Always show maximum 5 cards
            .ToList();

        StateHasChanged();
    }

    private void ClearDateFilter()
    {
        filterStartDate = null;
        filterEndDate = null;
        isDateFiltered = false;
        filteredActiveBatches = activeBatches.Take(5).ToList();
        StateHasChanged();
    }

    private void StartAutoRefresh()
    {
        // Refresh every 5 seconds
        refreshTimer = new System.Threading.Timer(async _ =>
        {
            await InvokeAsync(async () =>
            {
                await LoadData();
                StateHasChanged();
            });
        }, null, TimeSpan.FromSeconds(5), TimeSpan.FromSeconds(5));
    }

    private string GetStatusClass(string status)
    {
        return status.ToLower().Replace(" ", "");
    }

    private string GetStatusDisplay(string status)
    {
        return status == "InProgress" ? "In Progress" : status;
    }

    private void NavigateToBatch(string batchId)
    {
        // Navigate to weighing page with the batch
        Navigation.NavigateTo($"/weighing/{batchId}");
    }

    public void Dispose()
    {
        refreshTimer?.Dispose();
    }
}