        }

        .details-table th {
            padding: 12px 16px;
            text-align: left;
            font-size: 12px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .details-table td {
            padding: 12px 16px;
            border-bottom: 1px solid #e2e8f0;
            font-size: 14px;
        }

        .details-table tbody tr:hover {
            background-color: #f7fafc;
        }

        .details-table tbody tr:nth-child(even) {
            background-color: #fafbfc;
        }

    .rep-header {
        background-color: #edf2f7 !important;
        font-weight: 700;
        color: #2d3748;
    }

    .ingredient-code {
        font-family: 'Roboto Mono', monospace;
        font-weight: 700;
        color: #4a9eff;
    }

    .weight-value {
        font-family: 'Roboto Mono', monospace;
        font-weight: 600;
    }

    .deviation-positive {
        color: #38a169;
    }

    .deviation-negative {
        color: #e53e3e;
    }

    .tolerance-ok {
        color: #38a169;
        font-weight: 700;
    }

    .tolerance-fail {
        color: #e53e3e;
        font-weight: 700;
    }

