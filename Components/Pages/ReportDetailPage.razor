// ReportDetailPage.razor

@page "/report/{RecordId}"
@using FirstWeigh.Models
@using FirstWeigh.Services
@inject ReportService ReportService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Report Detail - FirstWeigh</PageTitle>

<style>
    .report-container {
        padding: 32px;
        max-width: 1400px;
        margin: 0 auto;
    }

    .report-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
    }

    .back-button {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background-color: #e2e8f0;
        color: #2d3748;
        border: none;
        padding: 10px 20px;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        text-decoration: none;
    }

        .back-button:hover {
            background-color: #cbd5e0;
        }

    .report-actions {
        display: flex;
        gap: 12px;
    }

    .btn-print {
        background-color: #4a9eff;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
    }

    .btn-export {
        background-color: #48bb78;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
    }

    .report-content {
        background: white;
        border-radius: 12px;
        padding: 32px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

    .report-title-section {
        text-align: center;
        padding-bottom: 24px;
        border-bottom: 3px solid #4a9eff;
        margin-bottom: 32px;
    }

    .report-title {
        font-size: 32px;
        font-weight: 700;
        color: #1a202c;
        margin-bottom: 8px;
    }

    .report-subtitle {
        font-size: 16px;
        color: #718096;
    }

    .report-id {
        font-family: 'Roboto Mono', monospace;
        font-size: 18px;
        color: #4a9eff;
        font-weight: 600;
        margin-top: 8px;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 24px;
        margin-bottom: 32px;
    }

    .info-box {
        padding: 16px;
        background: #f7fafc;
        border-radius: 8px;
        border-left: 4px solid #4a9eff;
    }

    .info-label {
        font-size: 12px;
        color: #718096;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
        font-weight: 600;
    }

    .info-value {
        font-size: 16px;
        color: #1a202c;
        font-weight: 600;
    }

    .info-value-mono {
        font-family: 'Roboto Mono', monospace;
        font-size: 18px;
        color: #1a202c;
        font-weight: 700;
    }

    .status-badge-large {
        display: inline-block;
        padding: 8px 20px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .status-completed {
        background-color: #c6f6d5;
        color: #22543d;
    }

    .status-aborted {
        background-color: #fed7d7;
        color: #742a2a;
    }

    .section-title {
        font-size: 20px;
        font-weight: 700;
        color: #2d3748;
        margin: 32px 0 16px 0;
        padding-bottom: 8px;
        border-bottom: 2px solid #e2e8f0;
    }

    .quality-summary {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 16px;
        margin-bottom: 32px;
    }

    .quality-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 20px;
        border-radius: 12px;
        text-align: center;
    }

        .quality-card.green {
            background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
        }

        .quality-card.orange {
            background: linear-gradient(135deg, #ed8936 0%, #dd6b20 100%);
        }

        .quality-card.blue {
            background: linear-gradient(135deg, #4a9eff 0%, #3a8ee6 100%);
        }

    .quality-label {
        font-size: 12px;
        opacity: 0.9;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 8px;
    }

    .quality-value {
        font-size: 36px;
        font-weight: 700;
        font-family: 'Roboto Mono', monospace;
    }

