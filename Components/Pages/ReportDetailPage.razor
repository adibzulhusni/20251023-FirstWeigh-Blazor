    @@media print {
        .report-header, .report-actions

    {
        display: none;
    }

    .report-container {
        padding: 0;
    }

    .report-content {
        box-shadow: none;
    }

    }
</style>

<div class="report-container">
    @if (isLoading)
    {
        <div class="loading">
            <p>⏳ Loading report...</p>
        </div>
    }
    else if (report == null)
    {
        <div class="error-state">
            <div class="error-icon">❌</div>
            <div class="error-text">Report not found</div>
            <br />
            <a href="/reports" class="back-button">← Back to Reports</a>
        </div>
    }
    else
    {
        <!-- Header with Actions -->
        <div class="report-header">
            <a href="/reports" class="back-button">
                ← Back to Reports
            </a>
            <div class="report-actions">
                <button class="btn-print" @onclick="PrintReport">
                    🖨️ Print
                </button>
                <button class="btn-export" @onclick="ExportToExcel">
                    📊 Export Excel
                </button>
            </div>
        </div>

        <!-- Report Content -->
        <div class="report-content">
            <!-- Title Section -->
            <div class="report-title-section">
                <h1 class="report-title">Batch Weighing Report</h1>
                <p class="report-subtitle">FirstWeigh Blind Weighing System</p>
                <div class="report-id">@report.RecordId</div>
            </div>

            <!-- Batch Information Grid -->
            <div class="info-grid">
                <div class="info-box">
                    <div class="info-label">Batch ID</div>
                    <div class="info-value-mono">@report.BatchId</div>
                </div>
                <div class="info-box">
                    <div class="info-label">Recipe</div>
                    <div class="info-value">@report.RecipeName</div>
                </div>
                <div class="info-box">
                    <div class="info-label">Recipe Code</div>
                    <div class="info-value-mono">@report.RecipeCode</div>
                </div>
                <div class="info-box">
                    <div class="info-label">Operator</div>
                    <div class="info-value">@report.OperatorName</div>
                </div>
                <div class="info-box">
                    <div class="info-label">Planned Start</div>
                    <div class="info-value">@(report.PlannedStartTime?.ToString("yyyy-MM-dd HH:mm:ss") ?? "N/A")</div>
                </div>
                <div class="info-box">
                    <div class="info-label">Planned End</div>
                    <div class="info-value">@(report.PlannedEndTime?.ToString("yyyy-MM-dd HH:mm:ss") ?? "N/A")</div>
                </div>
                <div class="info-box">
                    <div class="info-label">Start Time</div>
                    <div class="info-value">@report.SessionStartTime.ToString("yyyy-MM-dd HH:mm:ss")</div>
                </div>
                <div class="info-box">
                    <div class="info-label">End Time</div>
                    <div class="info-value">@(report.SessionEndTime?.ToString("yyyy-MM-dd HH:mm:ss") ?? "N/A")</div>
                </div>
                <div class="info-box">
                    <div class="info-label">Duration</div>
                    <div class="info-value">@FormatDuration(report.Duration)</div>
                </div>
                <div class="info-box">
                    <div class="info-label">Status</div>
                    <div>
                        <span class="status-badge-large @GetStatusClass(report.Status)">
                            @report.Status
                        </span>
                    </div>
                </div>
                <div class="info-box">
                    <div class="info-label">Repetitions</div>
                    <div class="info-value">@report.CompletedRepetitions of @report.TotalRepetitions</div>
                </div>
            </div>

            <!-- Abort Notice (if applicable) -->
            @if (report.Status == "Aborted")
            {
                <div class="abort-notice">
                    <div class="abort-title">⚠️ Batch Aborted</div>
                    <div class="abort-details">
                        <strong>Reason:</strong> @report.AbortReason<br />
                        <strong>Aborted By:</strong> @report.AbortedBy<br />
                        <strong>Date:</strong> @report.AbortedDate?.ToString("yyyy-MM-dd HH:mm:ss")
                    </div>
                </div>
            }

            <!-- Quality Summary -->
            <h2 class="section-title">📊 Quality Metrics</h2>
            <div class="quality-summary">
                <div class="quality-card blue">
                    <div class="quality-label">Total Ingredients</div>
                    <div class="quality-value">@report.TotalIngredientsWeighed</div>
                </div>
                <div class="quality-card green">
                    <div class="quality-label">Within Tolerance</div>
                    <div class="quality-value">@report.IngredientsWithinTolerance</div>
                </div>
                <div class="quality-card orange">
                    <div class="quality-label">Out of Tolerance</div>
                    <div class="quality-value">@report.IngredientsOutOfTolerance</div>
                </div>
                <div class="quality-card @GetComplianceCardClass(report.CompliancePercentage)">
                    <div class="quality-label">Compliance Rate</div>
                    <div class="quality-value">@report.CompliancePercentage.ToString("F1")%</div>
                </div>
                <div class="quality-card blue">
                    <div class="quality-label">Avg Deviation</div>
                    <div class="quality-value">±@report.AverageDeviation.ToString("F3")</div>
                </div>
                <div class="quality-card orange">
                    <div class="quality-label">Max Deviation</div>
                    <div class="quality-value">±@report.MaxDeviation.ToString("F3")</div>
                </div>
            </div>

            <!-- Detailed Ingredient Table -->
            <h2 class="section-title">📋 Detailed Weighing Records</h2>
            @if (!details.Any())
            {
                <p style="color: #718096; text-align: center; padding: 20px;">No ingredient details recorded.</p>
            }
            else
            {
                <table class="details-table">
                    <thead>
                        <tr>
                            <th>Rep</th>
                            <th>Seq</th>
                            <th>Ingredient Code</th>
                            <th>Ingredient Name</th>
                            <th>Target (kg)</th>
                            <th>Actual (kg)</th>
                            <th>Deviation (kg)</th>
                            <th>Tolerance</th>
                            <th>Status</th>
                            <th>Bowl</th>
                            <th>Scale</th>
                            <th>Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int currentRep = 0;
                        }
                        @foreach (var detail in details.OrderBy(d => d.RepetitionNumber).ThenBy(d => d.IngredientSequence))
                        {
                            @if (detail.RepetitionNumber != currentRep)
                            {
                                currentRep = detail.RepetitionNumber;
                                <tr class="rep-header">
                                    <td colspan="12" style="font-weight: 700; color: #2d3748;">
                                        🔄 REPETITION @currentRep
                                    </td>
                                </tr>
                            }
                            <tr>
                                <td>@detail.RepetitionNumber</td>
                                <td>@detail.IngredientSequence</td>
                                <td>
                                    <span class="ingredient-code">@detail.IngredientCode</span>
                                </td>
                                <td>@detail.IngredientName</td>
                                <td>
                                    <span class="weight-value">@detail.TargetWeight.ToString("F3")</span>
                                </td>
                                <td>
                                    <span class="weight-value">@detail.ActualWeight.ToString("F3")</span>
                                </td>
                                <td>
                                    <span class="weight-value @(detail.Deviation >= 0 ? "deviation-positive" : "deviation-negative")">
                                        @(detail.Deviation >= 0 ? "+" : "")@detail.Deviation.ToString("F3")
                                    </span>
                                </td>
                                <td>@detail.MinWeight.ToString("F3") - @detail.MaxWeight.ToString("F3")</td>
                                <td>
                                    <span class="@(detail.IsWithinTolerance ? "tolerance-ok" : "tolerance-fail")">
                                        @(detail.IsWithinTolerance ? "✓ OK" : "⚠ OUT")
                                    </span>
                                </td>
                                <td>@detail.BowlCode</td>
                                <td>Scale @detail.ScaleNumber</td>
                                <td>@detail.Timestamp.ToString("HH:mm:ss")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

            <!-- Footer -->
            <div style="margin-top: 40px; padding-top: 20px; border-top: 2px solid #e2e8f0; text-align: center; color: #718096; font-size: 12px;">
                <p>FirstWeigh Blind Weighing System | Report Generated: @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</p>
                <p>This report is automatically generated and does not require a signature.</p>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public string RecordId { get; set; } = string.Empty;

    private WeighingRecord? report;
    private List<WeighingDetail> details = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadReport();
    }

    private async Task LoadReport()
    {
        isLoading = true;

        try
        {
            report = await ReportService.GetRecordByIdAsync(RecordId);

            if (report != null)
            {
                details = await ReportService.GetDetailsByRecordIdAsync(RecordId);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading report: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void PrintReport()
    {
        // Trigger browser print dialog
        _ = JSRuntime.InvokeVoidAsync("window.print");
    }

    private async Task ExportToExcel()
    {
        try
        {
            var excelBytes = await ReportService.ExportReportToExcelAsync(RecordId);
            var fileName = $"Report_{RecordId}_{DateTime.Now:yyyyMMdd_HHmmss}.xlsx";

            await JSRuntime.InvokeVoidAsync("downloadFile", fileName, Convert.ToBase64String(excelBytes));
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error exporting to Excel: {ex.Message}");
        }
    }

    private string GetStatusClass(string status)
    {
        return status switch
        {
            "Completed" => "status-completed",
            "Aborted" => "status-aborted",
            _ => ""
        };
    }

    private string GetComplianceCardClass(decimal compliance)
    {
        if (compliance >= 95) return "green";
        if (compliance >= 85) return "orange";
        return "orange";
    }

    private string FormatDuration(TimeSpan duration)
    {
        if (duration.TotalHours >= 1)
            return $"{duration.Hours}h {duration.Minutes}m {duration.Seconds}s";
        if (duration.TotalMinutes >= 1)
            return $"{duration.Minutes}m {duration.Seconds}s";
        return $"{duration.Seconds}s";
    }
}