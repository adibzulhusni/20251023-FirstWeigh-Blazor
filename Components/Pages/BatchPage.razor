@code {
    private List<Batch> allBatches = new();
    private List<Batch> filteredBatches = new();
    private List<Recipe> recipes = new();

    private bool isLoading = true;
    private bool showModal = false;
    private bool showAbortModal = false;
    private bool showDeleteModal = false;
    private bool showDetailsModal = false;
    private bool showValidation = false;
    private bool isEditMode = false;
    private bool canStartNewBatch = true;

    private Batch currentBatch = new();
    private Batch? batchToAbort;
    private Batch? selectedBatch;
    private string batchToDelete = "";

    private string filterStatus = "";
    private string filterRecipeId = "";
    private string searchText = "";

    private string abortReason = "";
    private string supervisorName = "";
    private string abortedBy = "";
    // Get current logged-in user
    private string CurrentUsername => AuthService.CurrentUser?.Username ?? "Unknown";


    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        allBatches = await BatchService.GetAllBatchesAsync();
        recipes = await RecipeService.GetAllRecipesAsync();

        // Sort by created date descending (newest first)
        allBatches = allBatches.OrderByDescending(b => b.CreatedDate).ToList();

        ApplyFilters();

        canStartNewBatch = await BatchService.CanStartBatch();
        isLoading = false;
    }

    private void ApplyFilters()
    {
        filteredBatches = allBatches;

        // Filter by status
        if (!string.IsNullOrEmpty(filterStatus))
        {
            filteredBatches = filteredBatches.Where(b => b.Status == filterStatus).ToList();
        }

        // Filter by recipe
        if (!string.IsNullOrEmpty(filterRecipeId))
        {
            filteredBatches = filteredBatches.Where(b => b.RecipeId == filterRecipeId).ToList();
        }

        // Search by batch code or recipe name
        if (!string.IsNullOrEmpty(searchText))
        {
            filteredBatches = filteredBatches
                .Where(b => b.BatchId.Contains(searchText, StringComparison.OrdinalIgnoreCase) ||
                            b.RecipeName.Contains(searchText, StringComparison.OrdinalIgnoreCase))
                .ToList();
        }
    }

    private void OpenCreateModal()
    {
        currentBatch = new Batch
        {
            TotalRepetitions = 1,
            CreatedBy = CurrentUsername // Auto-filled from logged-in user
        };
        isEditMode = false;
        showValidation = false;
        showModal = true;
    }

    private void OpenEditModal(Batch batch)
    {
        currentBatch = new Batch
        {
            BatchId = batch.BatchId,
            RecipeId = batch.RecipeId,
            RecipeName = batch.RecipeName,
            TotalRepetitions = batch.TotalRepetitions,
            CreatedBy = batch.CreatedBy,
            Notes = batch.Notes
        };
        isEditMode = true;
        showValidation = false;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        showValidation = false;
    }

    private async Task SaveBatch()
    {
        showValidation = true;

        // Validation
        if (string.IsNullOrEmpty(currentBatch.RecipeId) || currentBatch.TotalRepetitions <= 0)
        {
            return;
        }

        if (isEditMode)
        {
            await BatchService.UpdateBatchAsync(currentBatch);
        }
        else
        {
            await BatchService.CreateBatchAsync(currentBatch);
        }

        await LoadData();
        CloseModal();
    }

    private async Task StartBatch(string batchId)
    {
        var success = await BatchService.StartBatchAsync(batchId, CurrentUsername); // Use current user
        if (success)
        {
            await LoadData();
        }
        else
        {
            await JSRuntime.InvokeVoidAsync("alert", "Cannot start batch. Maximum 5 batches can be in progress.");
        }
    }

    private void OpenAbortModal(Batch batch)
    {
        batchToAbort = batch;
        abortReason = "";
        supervisorName = "";
        abortedBy = CurrentUsername; // Use current user
        showValidation = false;
        showAbortModal = true;
    }

    private void CloseAbortModal()
    {
        showAbortModal = false;
        batchToAbort = null;
        showValidation = false;
    }

    private async Task ConfirmAbort()
    {
        if (batchToAbort == null) return;

        showValidation = true;

        // Validation
        if (string.IsNullOrEmpty(abortReason))
        {
            return;
        }

        if (batchToAbort.RequiresSupervisorApproval && string.IsNullOrEmpty(supervisorName))
        {
            return;
        }

        var abortBy = batchToAbort.RequiresSupervisorApproval ? supervisorName : abortedBy;
        var success = await BatchService.AbortBatchAsync(batchToAbort.BatchId, abortBy, abortReason);

        if (success)
        {
            await LoadData();
            CloseAbortModal();
        }
    }

    private void ConfirmDelete(string batchId)
    {
        batchToDelete = batchId;
        showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        batchToDelete = "";
    }

    private async Task ConfirmDeleteBatch()
    {
        await BatchService.DeleteBatchAsync(batchToDelete);
        await LoadData();
        CloseDeleteModal();
    }

    private void ViewBatchDetails(Batch batch)
    {
        selectedBatch = batch;
        showDetailsModal = true;
    }

    private void CloseDetailsModal()
    {
        showDetailsModal = false;
        selectedBatch = null;
    }
}