@page "/batches"
@using FirstWeigh.Models
@using FirstWeigh.Services
@inject IBatchService BatchService
@inject RecipeService RecipeService
@inject IJSRuntime JSRuntime
@inject AuthenticationService AuthService

<style>
    .page-container {
        padding: 32px;
        max-width: 1600px;
        margin: 0 auto;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 32px;
    }

    .page-title {
        font-size: 28px;
        font-weight: 700;
        color: #1a202c;
    }

    .btn-primary {
        background-color: #4a9eff;
        color: white;
        border: none;
        padding: 12px 24px;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        box-shadow: 0 2px 8px rgba(74, 158, 255, 0.3);
    }

        .btn-primary:hover {
            background-color: #3a8ee6;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(74, 158, 255, 0.4);
        }

    .search-filter-section {
        display: flex;
        gap: 16px;
        margin-bottom: 24px;
        flex-wrap: wrap;
    }

    .search-box {
        flex: 1;
        min-width: 300px;
        padding: 12px 16px;
        border: 2px solid #e2e8f0;
        border-radius: 6px;
        font-size: 14px;
        transition: border-color 0.2s;
    }

        .search-box:focus {
            outline: none;
            border-color: #4a9eff;
        }

    .filter-dropdown {
        padding: 12px 16px;
        border: 2px solid #e2e8f0;
        border-radius: 6px;
        font-size: 14px;
        background-color: white;
        cursor: pointer;
        transition: border-color 0.2s;
    }

        .filter-dropdown:focus {
            outline: none;
            border-color: #4a9eff;
        }

    /* Card Grid Layout */
    .batch-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(450px, 1fr));
        gap: 24px;
    }

    .batch-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        overflow: hidden;
        border: 2px solid transparent;
    }

        .batch-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
            border-color: #4a9eff;
        }

    .card-header {
        padding: 20px 24px;
        background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
        border-bottom: 2px solid #e2e8f0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 16px;
    }

    .card-header-left {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .batch-code {
        font-family: 'Roboto Mono', monospace;
        font-weight: 700;
        color: #1a202c;
        font-size: 18px;
    }

    .recipe-name {
        color: #4a5568;
        font-size: 14px;
        font-weight: 500;
    }

    .card-header-right {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 8px;
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        white-space: nowrap;
    }

    .status-pending {
        background-color: #feebc8;
        color: #7c2d12;
    }

    .status-inprogress {
        background-color: #bee3f8;
        color: #2c5282;
    }

    .status-completed {
        background-color: #c6f6d5;
        color: #22543d;
    }

    .status-aborted {
        background-color: #fed7d7;
        color: #742a2a;
    }

    .status-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
    }

    .status-pending .status-dot {
        background-color: #dd6b20;
    }

    .status-inprogress .status-dot {
        background-color: #3182ce;
    }

    .status-completed .status-dot {
        background-color: #38a169;
    }

    .status-aborted .status-dot {
        background-color: #e53e3e;
    }

    .card-body {
        padding: 24px;
    }

    .card-info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 16px;
        margin-bottom: 20px;
    }

    .info-item {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .info-label {
        font-size: 11px;
        font-weight: 600;
        color: #718096;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .info-value {
        font-size: 14px;
        color: #2d3748;
        font-weight: 500;
    }

    .info-value-code {
        font-family: 'Roboto Mono', monospace;
        font-weight: 600;
        color: #1a202c;
    }

    .no-value {
        color: #a0aec0;
        font-style: italic;
        font-size: 13px;
    }

    .card-footer {
        padding: 16px 24px;
        background-color: #f7fafc;
        border-top: 1px solid #e2e8f0;
        display: flex;
        justify-content: flex-end;
        gap: 8px;
    }

    .action-buttons {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    .btn-action {
        padding: 8px 16px;
        border: none;
        border-radius: 6px;
        font-size: 13px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        white-space: nowrap;
    }

    .btn-view {
        background-color: #e2e8f0;
        color: #4a5568;
    }

        .btn-view:hover {
            background-color: #cbd5e0;
        }

    .btn-edit {
        background-color: #bee3f8;
        color: #2c5282;
    }

        .btn-edit:hover {
            background-color: #90cdf4;
        }

    .btn-abort {
        background-color: #fed7d7;
        color: #c53030;
    }

        .btn-abort:hover {
            background-color: #fc8181;
        }

    .btn-delete {
        background-color: #fed7d7;
        color: #c53030;
    }

        .btn-delete:hover {
            background-color: #fc8181;
        }

    .btn-start {
        background-color: #c6f6d5;
        color: #22543d;
    }

        .btn-start:hover {
            background-color: #9ae6b4;
        }

        .btn-start:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

    .progress-bar-container {
        width: 100%;
        height: 8px;
        background-color: #e2e8f0;
        border-radius: 4px;
        overflow: hidden;
        margin-top: 8px;
    }

    .progress-bar-fill {
        height: 100%;
        background: linear-gradient(90deg, #4a9eff 0%, #38a169 100%);
        border-radius: 4px;
        transition: width 0.3s ease;
    }

    .empty-state {
        text-align: center;
        padding: 80px 20px;
        color: #718096;
    }

    .empty-state-icon {
        font-size: 64px;
        margin-bottom: 24px;
        opacity: 0.3;
    }

    .empty-state-text {
        font-size: 20px;
        font-weight: 600;
        margin-bottom: 12px;
        color: #2d3748;
    }

    .empty-state-subtext {
        font-size: 16px;
        color: #a0aec0;
    }

    /* Modal Styles */
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
    }

    .modal-content {
        background: white;
        border-radius: 12px;
        width: 90%;
        max-width: 600px;
        max-height: 90vh;
        overflow-y: auto;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    }

    .modal-header {
        padding: 24px;
        border-bottom: 1px solid #e2e8f0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .modal-title {
        font-size: 20px;
        font-weight: 600;
        color: #1a202c;
        margin: 0;
    }

    .modal-close {
        background: none;
        border: none;
        font-size: 24px;
        color: #718096;
        cursor: pointer;
        padding: 0;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 6px;
        transition: all 0.2s;
    }

        .modal-close:hover {
            background-color: #f7fafc;
            color: #1a202c;
        }

    .modal-body {
        padding: 24px;
    }

    .modal-footer {
        padding: 20px 24px;
        border-top: 1px solid #e2e8f0;
        display: flex;
        justify-content: flex-end;
        gap: 12px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        font-size: 13px;
        font-weight: 600;
        color: #4a5568;
        margin-bottom: 8px;
    }

    .form-control {
        width: 100%;
        padding: 10px 12px;
        border: 2px solid #e2e8f0;
        border-radius: 6px;
        font-size: 14px;
        transition: border-color 0.2s;
    }

        .form-control:focus {
            outline: none;
            border-color: #4a9eff;
        }

        .form-control:disabled {
            background-color: #f7fafc;
            color: #a0aec0;
            cursor: not-allowed;
        }

    .validation-error {
        display: block;
        color: #e53e3e;
        font-size: 12px;
        margin-top: 6px;
    }

    .btn-secondary {
        background-color: #e2e8f0;
        color: #4a5568;
        border: none;
        padding: 10px 20px;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }

        .btn-secondary:hover {
            background-color: #cbd5e0;
        }

    .btn-danger {
        background-color: #f56565;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }

        .btn-danger:hover {
            background-color: #e53e3e;
        }

    .alert {
        padding: 16px;
        border-radius: 8px;
        margin-bottom: 16px;
    }

    .alert-warning {
        background-color: #fef3c7;
        border: 1px solid #fbbf24;
        color: #78350f;
    }

        .alert-warning strong {
            display: block;
            font-weight: 600;
            margin-bottom: 4px;
        }

    .loading-spinner {
        text-align: center;
        padding: 60px 20px;
        color: #718096;
        font-size: 18px;
    }

    /* Responsive */
    @@media (max-width: 1200px) {
        .batch-grid {
            grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
        }
    }

    @@media (max-width: 768px) {
        .page-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 16px;
        }

        .search-filter-section {
            flex-direction: column;
        }

        .search-box {
            min-width: 100%;
        }

        .batch-grid {
            grid-template-columns: 1fr;
        }

        .card-info-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="page-container">
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="page-title">Batch Management</h1>
        <button class="btn-primary" @onclick="OpenCreateModal">+ Create Batch</button>
    </div>

    <!-- Search and Filter Section -->
    <div class="search-filter-section">
        <input type="text" class="search-box" placeholder="Search batches by code or recipe..."
               @bind="searchText" @bind:after="ApplyFilters">

        <select class="filter-dropdown" @bind="filterStatus" @bind:after="ApplyFilters">
            <option value="">All Statuses</option>
            <option value="Pending">Pending</option>
            <option value="InProgress">In Progress</option>
            <option value="Completed">Completed</option>
            <option value="Aborted">Aborted</option>
        </select>

        <select class="filter-dropdown" @bind="filterRecipeId" @bind:after="ApplyFilters">
            <option value="">All Recipes</option>
            @foreach (var recipe in recipes)
            {
                <option value="@recipe.RecipeId">@recipe.RecipeName</option>
            }
        </select>
    </div>

    <!-- Batches Grid -->
    @if (isLoading)
    {
        <div class="loading-spinner">Loading batches...</div>
    }
    else if (!filteredBatches.Any())
    {
        <div class="empty-state">
            <div class="empty-state-icon">📦</div>
            <div class="empty-state-text">No batches found</div>
            <div class="empty-state-subtext">Click "+ Create Batch" to start a new production batch</div>
        </div>
    }
    else
    {
        <div class="batch-grid">
            @foreach (var batch in filteredBatches)
            {
                <div class="batch-card">
                    <!-- Card Header -->
                    <div class="card-header">
                        <div class="card-header-left">
                            <span class="batch-code">@batch.BatchId</span>
                            <span class="recipe-name">@batch.RecipeName</span>
                        </div>
                        <div class="card-header-right">
                            <span class="status-badge status-@(batch.Status.ToLower().Replace(" ", ""))">
                                <span class="status-dot"></span>
                                @(batch.Status == "InProgress" ? "In Progress" : batch.Status)
                            </span>
                        </div>
                    </div>

                    <!-- Card Body -->
                    <div class="card-body">
                        <div class="card-info-grid">
                            <!-- Repetitions with Progress Bar -->
                            <div class="info-item" style="grid-column: 1 / -1;">
                                <span class="info-label">Progress</span>
                                <span class="info-value-code">@batch.CurrentRepetition / @batch.TotalRepetitions repetitions</span>
                                <div class="progress-bar-container">
                                    <div class="progress-bar-fill" style="width: @batch.ProgressPercentage%"></div>
                                </div>
                            </div>

                            <!-- Planned Dates -->
                            <div class="info-item">
                                <span class="info-label">Start Planned</span>
                                @if (batch.PlannedStartTime.HasValue)
                                {
                                    <span class="info-value">@batch.PlannedStartTime.Value.ToString("MMM dd, HH:mm")</span>
                                }
                                else
                                {
                                    <span class="no-value">Not set</span>
                                }
                            </div>

                            <div class="info-item">
                                <span class="info-label">End Planned</span>
                                @if (batch.PlannedEndTime.HasValue)
                                {
                                    <span class="info-value">@batch.PlannedEndTime.Value.ToString("MMM dd, HH:mm")</span>
                                }
                                else
                                {
                                    <span class="no-value">Not set</span>
                                }
                            </div>

                            <!-- Actual Dates -->
                            <div class="info-item">
                                <span class="info-label">Started</span>
                                @if (batch.StartedDate.HasValue)
                                {
                                    <span class="info-value">@batch.StartedDate.Value.ToString("MMM dd, HH:mm")</span>
                                }
                                else
                                {
                                    <span class="no-value">Not started</span>
                                }
                            </div>

                            <div class="info-item">
                                <span class="info-label">@(batch.Status == "Aborted" ? "Aborted" : "Completed")</span>
                                @if (batch.CompletedDate.HasValue)
                                {
                                    <span class="info-value">@batch.CompletedDate.Value.ToString("MMM dd, HH:mm")</span>
                                }
                                else if (batch.AbortedDate.HasValue)
                                {
                                    <span class="info-value">@batch.AbortedDate.Value.ToString("MMM dd, HH:mm")</span>
                                }
                                else
                                {
                                    <span class="no-value">—</span>
                                }
                            </div>

                            <!-- People -->
                            <div class="info-item">
                                <span class="info-label">Created By</span>
                                <span class="info-value">@batch.CreatedBy</span>
                            </div>

                            <div class="info-item">
                                <span class="info-label">Created Date</span>
                                <span class="info-value">@batch.CreatedDate.ToString("MMM dd, yyyy")</span>
                            </div>

                            @if (!string.IsNullOrEmpty(batch.CompletedBy))
                            {
                                <div class="info-item">
                                    <span class="info-label">Completed By</span>
                                    <span class="info-value">@batch.CompletedBy</span>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(batch.AbortReason))
                            {
                                <div class="info-item" style="grid-column: 1 / -1;">
                                    <span class="info-label">Abort Reason</span>
                                    <span class="info-value">@batch.AbortReason</span>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Card Footer with Actions -->
                    <div class="card-footer">
                        <div class="action-buttons">
                            <button class="btn-action btn-view" @onclick="() => ViewBatchDetails(batch)">
                                View
                            </button>

                            @if (batch.Status == "Pending")
                            {
                                <button class="btn-action btn-start"
                                        @onclick="() => StartBatch(batch.BatchId)"
                                        disabled="@(!canStartNewBatch)">
                                    Start
                                </button>
                                <button class="btn-action btn-edit" @onclick="() => OpenEditModal(batch)">
                                    Edit
                                </button>
                                <button class="btn-action btn-delete" @onclick="() => ConfirmDelete(batch.BatchId)">
                                    Delete
                                </button>
                            }
                            else if (batch.Status == "InProgress")
                            {
                                <button class="btn-action btn-abort" @onclick="() => OpenAbortModal(batch)">
                                    Abort
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Create/Edit Modal -->
@if (showModal)
{
    <div class="modal-overlay" @onclick="CloseModal">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h2 class="modal-title">@(isEditMode ? "Edit Batch" : "Create New Batch")</h2>
                <button class="modal-close" @onclick="CloseModal">×</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="form-label">Recipe *</label>
                    <select class="form-control" @bind="currentBatch.RecipeId" disabled="@isEditMode">
                        <option value="">-- Select Recipe --</option>
                        @foreach (var recipe in recipes)
                        {
                            <option value="@recipe.RecipeId">@recipe.RecipeName (@recipe.RecipeCode)</option>
                        }
                    </select>
                    @if (showValidation && string.IsNullOrEmpty(currentBatch.RecipeId))
                    {
                        <span class="validation-error">Recipe is required</span>
                    }
                </div>

                <div class="form-group">
                    <label class="form-label">Number of Repetitions *</label>
                    <div class="form-group">
                        <label class="form-label">Planned Start Time</label>
                        <input type="datetime-local" class="form-control" @bind="currentBatch.PlannedStartTime" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Planned End Time</label>
                        <input type="datetime-local" class="form-control" @bind="currentBatch.PlannedEndTime" />
                    </div>
                    <input type="number" class="form-control" @bind="currentBatch.TotalRepetitions" min="1" max="999" />
                    @if (showValidation && currentBatch.TotalRepetitions <= 0)
                    {
                        <span class="validation-error">Must be at least 1</span>
                    }
                </div>

                <div class="form-group">
                    <label class="form-label">Created By</label>
                    <input type="text" class="form-control" @bind="currentBatch.CreatedBy"
                           placeholder="Operator name" disabled />
                </div>

                <div class="form-group">
                    <label class="form-label">Notes</label>
                    <textarea class="form-control" @bind="currentBatch.Notes" rows="3"
                              placeholder="Optional notes..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn-secondary" @onclick="CloseModal">Cancel</button>
                <button class="btn-primary" @onclick="SaveBatch">
                    @(isEditMode ? "Update Batch" : "Create Batch")
                </button>
            </div>
        </div>
    </div>
}

<!-- Abort Modal -->
@if (showAbortModal)
{
    <div class="modal-overlay" @onclick="CloseAbortModal">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h2 class="modal-title">⚠️ Abort Batch</h2>
                <button class="modal-close" @onclick="CloseAbortModal">×</button>
            </div>
            <div class="modal-body">
                @if (batchToAbort?.RequiresSupervisorApproval == true)
                {
                    <div class="alert alert-warning">
                        <strong>⚠️ Supervisor Approval Required</strong>
                        <p>This batch is @batchToAbort.ProgressPercentage.ToString("F0")% complete (>40%). A supervisor must approve this abort.</p>
                    </div>
                }

                <p style="margin-bottom: 16px;">Are you sure you want to abort batch <strong>@batchToAbort?.BatchId</strong>?</p>

                <div class="form-group">
                    <label class="form-label">Abort Reason *</label>
                    <textarea class="form-control" @bind="abortReason" rows="4"
                              placeholder="Please explain why this batch is being aborted..."></textarea>
                    @if (showValidation && string.IsNullOrEmpty(abortReason))
                    {
                        <span class="validation-error">Abort reason is required</span>
                    }
                </div>

                @if (batchToAbort?.RequiresSupervisorApproval == true)
                {
                    <div class="form-group">
                        <label class="form-label">Supervisor Name *</label>
                        <input type="text" class="form-control" @bind="supervisorName"
                               placeholder="Enter supervisor name" />
                        @if (showValidation && string.IsNullOrEmpty(supervisorName))
                        {
                            <span class="validation-error">Supervisor approval is required</span>
                        }
                    </div>
                }
                else
                {
                    <div class="form-group">
                        <label class="form-label">Aborted By</label>
                        <input type="text" class="form-control" @bind="abortedBy" placeholder="Your name" />
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button class="btn-secondary" @onclick="CloseAbortModal">Cancel</button>
                <button class="btn-danger" @onclick="ConfirmAbort">Abort Batch</button>
            </div>
        </div>
    </div>
}

<!-- Delete Confirmation Modal -->
@if (showDeleteModal)
{
    <div class="modal-overlay" @onclick="CloseDeleteModal">
        <div class="modal-content" @onclick:stopPropagation="true" style="max-width: 400px;">
            <div class="modal-header">
                <h2 class="modal-title">Delete Batch</h2>
                <button class="modal-close" @onclick="CloseDeleteModal">×</button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete batch <strong>@batchToDelete</strong>?</p>
                <p style="color: #a0aec0; font-size: 13px; margin-top: 8px;">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button class="btn-secondary" @onclick="CloseDeleteModal">Cancel</button>
