    private void SortUsage(string column)
    {
        if (usageSortColumn == column)
        {
            // Toggle sort direction
            usageSortAscending = !usageSortAscending;
        }
        else
        {
            // New column, default to ascending
            usageSortColumn = column;
            usageSortAscending = true;
        }

        // Apply sort
        ingredientUsage = column switch
        {
            "IngredientCode" => usageSortAscending
                ? ingredientUsage.OrderBy(i => i.IngredientCode).ToList()
                : ingredientUsage.OrderByDescending(i => i.IngredientCode).ToList(),
            "IngredientName" => usageSortAscending
                ? ingredientUsage.OrderBy(i => i.IngredientName).ToList()
                : ingredientUsage.OrderByDescending(i => i.IngredientName).ToList(),
            "TotalWeightUsed" => usageSortAscending
                ? ingredientUsage.OrderBy(i => i.TotalWeightUsed).ToList()
                : ingredientUsage.OrderByDescending(i => i.TotalWeightUsed).ToList(),
            "TimesUsed" => usageSortAscending
                ? ingredientUsage.OrderBy(i => i.TimesUsed).ToList()
                : ingredientUsage.OrderByDescending(i => i.TimesUsed).ToList(),
            _ => ingredientUsage
        };
    }

    private string GetSortClass(string column)
    {
        if (usageSortColumn != column)
            return "";

        return usageSortAscending ? "sorted-asc" : "sorted-desc";
    }

    private async Task ExportIngredientUsageToExcel()
    {
        if (!ingredientUsage.Any())
        {
            await JSRuntime.InvokeVoidAsync("alert", "No ingredient usage data to export!");
            return;
        }

        try
        {
            var excelBytes = await ReportService.ExportIngredientUsageToExcelAsync();
            var fileName = $"IngredientUsage_{DateTime.Now:yyyyMMdd_HHmmss}.xlsx";

            await JSRuntime.InvokeVoidAsync("downloadFile", fileName, Convert.ToBase64String(excelBytes));
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error exporting to Excel: {ex.Message}");
        }
    }

