<div class="reports-container">
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="page-title">📊 Weighing Reports</h1>
        <p class="page-subtitle">View and analyze completed batch reports</p>
        <!-- Ingredient Usage Button (instead of showing the table) -->
     

        <!-- Ingredient Usage Modal -->
        @if (showUsageModal)
        {
            <div class="modal-overlay" @onclick="CloseUsageModal">
                <div class="modal-container" @onclick:stopPropagation="true">
                    <!-- Modal Header -->
                    <div class="modal-header">
                        <div>
                            <h2 class="modal-title">📦 Ingredient Usage Summary</h2>
                            <p class="modal-subtitle">Total consumption across all weighing records</p>
                        </div>
                        <button class="btn-close-modal" @onclick="CloseUsageModal">×</button>
                    </div>

                    <!-- Modal Body -->
                    <div class="modal-body">
                        @if (isLoadingUsage)
                        {
                            <div class="loading">
                                <p>⏳ Loading ingredient usage...</p>
                            </div>
                        }
                        else if (!ingredientUsage.Any())
                        {
                            <div class="empty-state">
                                <div class="empty-icon">📦</div>
                                <div class="empty-text">No Ingredient Usage Data</div>
                                <div class="empty-subtext">Start weighing to track ingredient consumption</div>
                            </div>
                        }
                        else
                        {
                            <table class="usage-table">
                                <thead>
                                    <tr>
                                        <th class="sortable @GetSortClass("IngredientCode")" @onclick='() => SortUsage("IngredientCode")'>
                                            Ingredient Code
                                        </th>
                                        <th class="sortable @GetSortClass("IngredientName")" @onclick='() => SortUsage("IngredientName")'>
                                            Ingredient Name
                                        </th>
                                        <th class="sortable @GetSortClass("TotalWeightUsed")" @onclick='() => SortUsage("TotalWeightUsed")'>
                                            Total Weight Used (kg)
                                        </th>
                                        <th class="sortable @GetSortClass("TimesUsed")" @onclick='() => SortUsage("TimesUsed")'>
                                            Times Used
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ingredientUsage)
                                    {
                                        <tr>
                                            <td><span class="usage-code">@item.IngredientCode</span></td>
                                            <td>@item.IngredientName</td>
                                            <td><span class="usage-weight">@item.TotalWeightUsed.ToString("F2")</span></td>
                                            <td><span class="usage-count">@item.TimesUsed</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>

                    <!-- Modal Footer -->
                    <div class="modal-actions">
                        <div class="usage-stats">
                            @ingredientUsage.Count ingredients tracked
                        </div>
                        <button class="btn-export-usage" @onclick="ExportIngredientUsageToExcel" disabled="@(!ingredientUsage.Any())">
                            📥 Export to Excel
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>

