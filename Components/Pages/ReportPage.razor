// ReportsPage.razor

@page "/reports"
@using FirstWeigh.Models
@using FirstWeigh.Services
@inject ReportService ReportService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Reports - FirstWeigh</PageTitle>

<style>
    .reports-container {
        padding: 32px;
        max-width: 1600px;
        margin: 0 auto;
    }

    .page-header {
        margin-bottom: 32px;
    }

    .page-title {
        font-size: 28px;
        font-weight: 700;
        color: #1a202c;
        margin-bottom: 8px;
    }

    .page-subtitle {
        font-size: 14px;
        color: #718096;
    }

    .filters-card {
        background: white;
        border-radius: 12px;
        padding: 24px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        margin-bottom: 24px;
    }

    .filters-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 16px;
        margin-bottom: 16px;
    }

    .filter-group {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .filter-label {
        font-size: 13px;
        font-weight: 600;
        color: #2d3748;
    }

    .filter-input {
        padding: 8px 12px;
        border: 2px solid #e2e8f0;
        border-radius: 6px;
        font-size: 14px;
        font-family: 'Inter', sans-serif;
    }

    .filter-input:focus {
        outline: none;
        border-color: #4a9eff;
    }

    .btn-search {
        background-color: #4a9eff;
        color: white;
        border: none;
        padding: 10px 24px;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-search:hover {
        background-color: #3a8ee6;
    }

    .btn-clear {
        background-color: #e2e8f0;
        color: #2d3748;
        border: none;
        padding: 10px 24px;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
    }

    .stats-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 16px;
        margin-bottom: 24px;
    }

    .stat-box {
        background: white;
        border-radius: 8px;
        padding: 16px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

    .stat-label {
        font-size: 12px;
        color: #718096;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
    }

    .stat-value {
        font-size: 24px;
        font-weight: 700;
        color: #1a202c;
        font-family: 'Roboto Mono', monospace;
    }

    .reports-table-card {
        background: white;
        border-radius: 12px;
        padding: 24px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

    .table-container {
        overflow-x: auto;
    }

    .reports-table {
        width: 100%;
        border-collapse: collapse;
    }

    .reports-table thead {
        background-color: #f7fafc;
        border-bottom: 2px solid #e2e8f0;
    }

    .reports-table th {
        padding: 12px 16px;
        text-align: left;
        font-size: 12px;
        font-weight: 600;
        color: #4a5568;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .reports-table td {
        padding: 16px;
        border-bottom: 1px solid #e2e8f0;
        font-size: 14px;
        color: #2d3748;
    }

    .reports-table tbody tr:hover {
        background-color: #f7fafc;
    }

    .record-id {
        font-family: 'Roboto Mono', monospace;
        font-weight: 600;
        color: #4a9eff;
    }

    .batch-id {
        font-family: 'Roboto Mono', monospace;
        font-weight: 600;
    }

    .status-badge {
        display: inline-block;
        padding: 4px 12px;
        border-radius: 12px;
        font-size: 12px;
        font-weight: 600;
    }

    .status-completed {
        background-color: #c6f6d5;
        color: #22543d;
    }

    .status-aborted {
        background-color: #fed7d7;
        color: #742a2a;
    }

    .status-inprogress {
        background-color: #bee3f8;
        color: #2c5282;
    }

    .quality-badge {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        padding: 4px 12px;
        border-radius: 12px;
        font-size: 12px;
        font-weight: 600;
    }

    .quality-good {
        background-color: #c6f6d5;
        color: #22543d;
    }

    .quality-warning {
        background-color: #feebc8;
        color: #7c2d12;
    }

    .quality-poor {
        background-color: #fed7d7;
        color: #742a2a;
    }

    .btn-view-report {
        background-color: #4a9eff;
        color: white;
        border: none;
        padding: 6px 16px;
        border-radius: 6px;
        font-size: 13px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-view-report:hover {
        background-color: #3a8ee6;
    }

    .btn-delete-report {
        background-color: #e53e3e;
        color: white;
        border: none;
        padding: 6px 16px;
        border-radius: 6px;
        font-size: 13px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }

        .btn-delete-report:hover {
            background-color: #c53030;
        }

    .action-buttons {
        display: flex;
        gap: 8px;
        align-items: center;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #a0aec0;
    }

    .empty-icon {
        font-size: 64px;
        margin-bottom: 16px;
        opacity: 0.3;
    }

    .empty-text {
        font-size: 16px;
        font-weight: 600;
        margin-bottom: 8px;
    }

    .empty-subtext {
        font-size: 14px;
    }

    .loading {
        text-align: center;
        padding: 40px;
        color: #718096;
    }
</style>

<div class="reports-container">
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="page-title">📊 Weighing Reports</h1>
        <p class="page-subtitle">View and analyze completed batch reports</p>
    </div>

    <!-- Filters Card -->
    <div class="filters-card">
        <div class="filters-grid">
            <div class="filter-group">
                <label class="filter-label">Start Date</label>
                <input type="date" class="filter-input" @bind="startDate" />
            </div>
            <div class="filter-group">
                <label class="filter-label">End Date</label>
                <input type="date" class="filter-input" @bind="endDate" />
            </div>
            <div class="filter-group">
                <label class="filter-label">Status</label>
                <select class="filter-input" @bind="statusFilter">
                    <option value="">All Statuses</option>
                    <option value="Completed">Completed</option>
                    <option value="Aborted">Aborted</option>
                    <option value="In Progress">In Progress</option>
                </select>
            </div>
            <div class="filter-group">
                <label class="filter-label">Search</label>
                <input type="text" class="filter-input" placeholder="Batch ID, Recipe..." @bind="searchText" />
            </div>
        </div>
        <div style="display: flex; gap: 12px;">
            <button class="btn-search" @onclick="LoadReports">
                🔍 Search
            </button>
            <button class="btn-clear" @onclick="ClearFilters">
                Clear
            </button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading">
            <p>⏳ Loading reports...</p>
        </div>
    }
    else
    {
        <!-- Summary Statistics -->
        @if (filteredReports.Any())
        {
            <div class="stats-row">
                <div class="stat-box">
                    <div class="stat-label">Total Reports</div>
                    <div class="stat-value">@filteredReports.Count</div>
                </div>
                <div class="stat-box">
                    <div class="stat-label">Completed</div>
                    <div class="stat-value">@filteredReports.Count(r => r.Status == "Completed")</div>
                </div>
                <div class="stat-box">
                    <div class="stat-label">Aborted</div>
                    <div class="stat-value">@filteredReports.Count(r => r.Status == "Aborted")</div>
                </div>
                <div class="stat-box">
                    <div class="stat-label">Avg Compliance</div>
                    <div class="stat-value">@(filteredReports.Any() ? filteredReports.Average(r => r.CompliancePercentage).ToString("F1") : "0")%</div>
                </div>
            </div>
        }

        <!-- Reports Table -->
        <div class="reports-table-card">
            @if (!filteredReports.Any())
            {
                <div class="empty-state">
                    <div class="empty-icon">📋</div>
                    <div class="empty-text">No Reports Found</div>
                    <div class="empty-subtext">Try adjusting your filters or date range</div>
                </div>
            }
            else
            {
                <div class="table-container">
                    <table class="reports-table">
                        <thead>
                            <tr>
                                <th>Record ID</th>
                                <th>Batch ID</th>
                                <th>Recipe</th>
                                <th>Operator</th>
                                <th>Date & Time</th>
                                <th>Duration</th>
                                <th>Reps</th>
                                <th>Status</th>
                                <th>Quality</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var report in filteredReports)
                            {
                                <tr>
                                    <td>
                                        <span class="record-id">@report.RecordId</span>
                                    </td>
                                    <td>
                                        <span class="batch-id">@report.BatchId</span>
                                    </td>
                                    <td>@report.RecipeName</td>
                                    <td>@report.OperatorName</td>
                                    <td>@report.SessionStartTime.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>@FormatDuration(report.Duration)</td>
                                    <td>@report.CompletedRepetitions / @report.TotalRepetitions</td>
                                    <td>
                                        <span class="status-badge @GetStatusClass(report.Status)">
                                            @report.Status
                                        </span>
                                    </td>
                                    <td>
                                        <span class="quality-badge @GetQualityClass(report.CompliancePercentage)">
                                            @report.CompliancePercentage.ToString("F1")%
                                        </span>
                                    </td>
                                    <td>
                                        <button class="btn-view-report" @onclick="() => ViewReport(report.RecordId)">
                                            View Report
                                        </button>
                                        <button class="btn-delete-report" @onclick="() => DeleteReport(report.RecordId, report.BatchId)">
                                            🗑️ Delete
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<WeighingRecord> allReports = new();
    private List<WeighingRecord> filteredReports = new();
    private bool isLoading = true;

    // Filter variables
    private DateTime startDate = DateTime.Today.AddDays(-30);
    private DateTime endDate = DateTime.Today;
    private string statusFilter = "";
    private string searchText = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadReports();
    }

    private async Task LoadReports()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            allReports = await ReportService.GetRecordsByDateRangeAsync(startDate, endDate);
            ApplyFilters();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading reports: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ApplyFilters()
    {
        filteredReports = allReports;

        // Status filter
        if (!string.IsNullOrEmpty(statusFilter))
        {
            filteredReports = filteredReports.Where(r => r.Status == statusFilter).ToList();
        }

        // Search filter
        if (!string.IsNullOrEmpty(searchText))
        {
            filteredReports = filteredReports.Where(r =>
                r.BatchId.Contains(searchText, StringComparison.OrdinalIgnoreCase) ||
                r.RecordId.Contains(searchText, StringComparison.OrdinalIgnoreCase) ||
                r.RecipeName.Contains(searchText, StringComparison.OrdinalIgnoreCase)
            ).ToList();
        }
    }

    private void ClearFilters()
    {
        startDate = DateTime.Today.AddDays(-30);
        endDate = DateTime.Today;
        statusFilter = "";
        searchText = "";
        ApplyFilters();
    }

    private void ViewReport(string recordId)
    {
        Navigation.NavigateTo($"/report/{recordId}");
    }
    private async Task DeleteReport(string recordId, string batchId)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm",
            $"Delete report {recordId} for batch {batchId}?\n\nThis cannot be undone!");

        if (confirmed)
        {
            try
            {
                await ReportService.DeleteRecordAsync(recordId);
                await LoadReports();
                await JSRuntime.InvokeVoidAsync("alert", $"✅ Report {recordId} deleted.");
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"❌ Error: {ex.Message}");
            }
        }
    }

    private string GetStatusClass(string status)
    {
        return status switch
        {
            "Completed" => "status-completed",
            "Aborted" => "status-aborted",
            "In Progress" => "status-inprogress",
            _ => ""
        };
    }

    private string GetQualityClass(decimal compliancePercentage)
    {
        if (compliancePercentage >= 95) return "quality-good";
        if (compliancePercentage >= 85) return "quality-warning";
        return "quality-poor";
    }

    private string FormatDuration(TimeSpan duration)
    {
        if (duration.TotalHours >= 1)
            return $"{duration.Hours}h {duration.Minutes}m";
        return $"{duration.Minutes}m";
    }
}